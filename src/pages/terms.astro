---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
---

<Layout title="Terms of Service - Storys.ai">
    <main class="py-20">
        <Container>
            <div class="max-w-4xl mx-auto prose prose-lg">
                <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">Terms of Service</h1>
                
                <div class="text-gray-600 dark:text-gray-300 space-y-6">
                    <p class="text-sm text-gray-500">Last updated: {new Date().toLocaleDateString()}</p>
                    
                    <section>
                        <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">1. Agreement to Terms</h2>
                        <p>By accessing and using Storys.ai ("Service"), you agree to be bound by these Terms of Service and all applicable laws and regulations.</p>
                    </section>

                    <section>
